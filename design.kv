<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_name: 'Arial'
                font_size: '20sp'
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5 
                    pos_hint: {'center_x': 0.5,'center_y': 0.6}
            #we can create a space in gui
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password"
                background_color: 1, 1, 1, 0
                #self refers to current state of the button
                #if its not 
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                background_color: 1, 1, 1, 0
                #self refers to current state of the button
                #if its not 
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                text: "Sign Up"
                #on press allows the user to hit the root.signup function
                # root.sign up = Login screen in main.py
                on_press: root.sign_up()
 

#we create a sign up screen
#this will be readble, writeable
<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text:'Sign up for a new experience!'
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text:'Submit'
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)


#we create a new screen
<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful"
        Button:
            text:'Login page'
            on_press: root.go_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                #if a mouse is over the button we put the logout
                source:  'logout_hover.png' if self.hovered else "logout_nothover.png"
                size_hint: 0.35, 0.35
                pos_hint: {'center_x':0.93, 'center_y': 0.8}
        Label:
            text: "How do you feel?"
        TextInput:
            id: feeling
            hint_text: "You can try: happy, sad, unloved..."
        Button:
            text:'Enlighten me'   
            on_press: root.get_quote(root.ids.feeling.text)
        Label:
            id: quote
            text: "text"




#allows the functions to add new screens
<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"