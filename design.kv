<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button:
                text: "forgot Password"
            Button:
                text: "Sign Up"
                #on press allows the user to hit the root.signup function
                # root.sign up = Login screen in main.py
                on_press: root.sign_up()
 

#we create a sign up screen
#this will be readble, writeable
<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text:'Sign up for a glimpse'
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text:'Submit'
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)


#we create a new screen
<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful"
        Button:
            text:'Login page'






#allows the functions to work 
<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"