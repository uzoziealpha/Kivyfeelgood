<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
            Button:
                text: "Login"
                on_press: root.login(root.ids.username.text, root.ids.password.text)
            #we can create a space in gui
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password"
            Button:
                text: "Sign Up"
                #on press allows the user to hit the root.signup function
                # root.sign up = Login screen in main.py
                on_press: root.sign_up()
 

#we create a sign up screen
#this will be readble, writeable
<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text:'Sign up for a new experience!'
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text:'Submit'
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)


#we create a new screen
<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful"
        Button:
            text:'Login page'
            on_press: root.go_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        Button:
            text: "Logout"
            on_press: root.log_out()
        Label:
            text: "How do you feel?"
        TextInput:
            id: feeling
            hint_text: "You can try: happy, sad, unloved..."
        Button:
            text:'Enlighten me'   
            on_press: root.get_quote(root.ids.feeling.text)
        Label:
            id: quote
            text: "text"




#allows the functions to add new screens
<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"